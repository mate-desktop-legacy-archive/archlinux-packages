pkgname=libmatenotify
pkgver=1.1.0
pkgrel=1
pkgdesc="Desktop notification library"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('gdk-pixbuf2')
makedepends=('gtk2' 'gobject-introspection')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://matsusoft.com.ar/projects/mate/"
source=(./libmatenotify-1.1.0.tar.gz)
sha256sums=('843aa219c6899651d3ab972ff595a455bae9fe0ca05fec689a5811f5adc56b60')


build() {
    cd "${srcdir}/$pkgname"
    ./autogen.sh \
        --prefix=/usr \
        --disable-static || return 1
    make || return 1
}

package() {
    cd "${srcdir}/$pkgname"
    make DESTDIR="${pkgdir}" install || return 1
}
