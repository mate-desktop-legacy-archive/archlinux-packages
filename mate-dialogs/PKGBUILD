pkgname=mate-dialogs
pkgver=1.7.2
pkgrel=4
pkgdesc="Display graphical dialog boxes from shell scripts"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('LGPL')
depends=('gtk2' 'libnotify' 'yelp')
makedepends=('docbook-xml' 'mate-common' 'perl-xml-parser' 'yelp-tools')
options=('!emptydirs')
groups=('mate')
source=("http://pub.mate-desktop.org/releases/1.7/${pkgname}-${pkgver}.tar.xz")
sha1sums=('adfa6c43b624c76f59125f6748a53b6fe433207a')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure \
        --prefix=/usr
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}
