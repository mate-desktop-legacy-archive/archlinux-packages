# Maintainer : Martin Wimpress <code@flexion.org>

pkgname=mate-dialogs
pkgver=1.7.3
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
url="http://mate-desktop.org"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('gtk2' 'libnotify' 'yelp')
makedepends=('docbook-xml' 'mate-common' 'perl-xml-parser' 'yelp-tools')
optdepends=('yelp: for reading MATE help documents')
options=('!emptydirs')
groups=('mate-unstable')
source=("http://pub.mate-desktop.org/releases/1.7/${pkgname}-${pkgver}.tar.xz")
sha1sums=('aed515adb9369f337bcf6a83ec849666ccff7b0c')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    ./configure \
        --prefix=/usr \
        --with-gtk=2.0
    make
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    make DESTDIR="${pkgdir}" install
}
