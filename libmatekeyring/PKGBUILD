pkgname=libmatekeyring
pkgver=1.6.0
pkgrel=1
pkgdesc="MATE keyring client library"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
depends=('libgcrypt' 'gtk-doc') # 'eggdbus' 'mate-keyring'
makedepends=('intltool' 'pkgconfig' 'python')
groups=('mate')
options=('!emptydirs' '!libtool')
url="http://mate-desktop.org"
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('7ce673bbf7e2d20811b5197c9a79e813226c4ef8d2719f606ad6d98e5958cc99')

build() {
    cd "${srcdir}/$pkgname-$pkgver"
    ./autogen.sh \
        --prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --libexecdir=/usr/lib/mate-keyring || return 1

    make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install || return 1
}
