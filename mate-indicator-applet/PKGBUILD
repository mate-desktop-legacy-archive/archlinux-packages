#Contributor: Xpander <xpander0@gmail.com>

pkgname=mate-indicator-applet
pkgver=1.6.0
pkgrel=1
pkgdesc="Indicator Applet for MATE"
arch=('i686' 'x86_64')
url=""
license=('GPL')
makedepends=('gtk2' 'mate-panel')
options=(!libtool)
install=$pkgname.install
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('79c5154075096b4622c782d798b5981a2f277b9079e545a9bcb4644e6a6e4dfd')

build() {
cd $srcdir/$pkgname-$pkgver
 
  ./autogen.sh LDFLAGS="-lm" --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
  --disable-static --disable-scrollkeeper
  make
}
package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="${pkgdir}" install
}
