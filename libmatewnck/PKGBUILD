pkgname=libmatewnck
pkgver=1.6.1
pkgrel=2
pkgdesc="Description: MATE Window Navigator Construction Kit. A library to use for writing pagers and task lists."
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('LGPL')
depends=('glib2' 'gobject-introspection' 'gtk2' 'libx11' 'libxres' 'libxt'
         'startup-notification')
makedepends=('mate-common' 'perl-xml-parser')
options=('!emptydirs' '!libtool')
groups=('mate')
source=(http://pub.mate-desktop.org/releases/1.6/${pkgname}-${pkgver}.tar.xz)
sha256sums=('39c1b291178153dec9c7036475c61e7acb622f3a38f39810cf5d6f1ba4f51e0c')

build() {
    cd ${srcdir}/${pkgname}-${pkgver}
    ./configure \
        --prefix=/usr \
        --disable-static \
        --enable-gtk-doc \
		--enable-startup-notification \
		--enable-introspection \
        --disable-schemas-install
    make
}

package() {
    cd ${srcdir}/${pkgname}-${pkgver}
    make DESTDIR="${pkgdir}" install
}
