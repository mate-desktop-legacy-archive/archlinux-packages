pkgname=mate-file-manager-sendto
pkgver=1.6.0
pkgrel=1
pkgdesc="Context menu for sending files on MATE File Manager"
arch=('i686' 'x86_64')
license=('GPL')
depends=('mate-file-manager')
makedepends=('gettext' 'intltool')
optdepends=('pidgin' 'gajim')
options=('!emptydirs')
install=mate-file-manager-sendto.install
url="http://mate-desktop.org"
groups=('mate-extras')
source=(http://pub.mate-desktop.org/releases/1.6/$pkgname-$pkgver.tar.xz)
sha256sums=('2581c36de76205280290fca601b9edfbfeed75dcc0713a2eb8630e2a2c988aa3')

build() {
	cd "${srcdir}/${pkgname}-$pkgver"
	./autogen.sh --prefix=/usr --sysconfdir=/etc \
		--localstatedir=/var
		#--disable-schemas-compile
	make || return 1
}

package() {
    cd "${srcdir}/$pkgname-$pkgver"

    make DESTDIR="$pkgdir/" install
}
