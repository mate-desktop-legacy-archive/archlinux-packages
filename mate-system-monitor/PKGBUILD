# Contributor: Martin Wimpress <code@flexion.org>

pkgname=mate-system-monitor
pkgver=
pkgrel=1
pkgdesc="A system monitor for MATE"
url="http://mate-desktop.org"
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
license=('GPL')
depends=('dbus' 'glibmm' 'gtk2' 'gtkmm' 'libgtop' 'libwnck' 'librsvg'
         'mate-icon-theme')
makedepends=('docbook2x' 'mate-common' 'perl-xml-parser' 'yelp-tools')
options=('!emptydirs' '!libtool')
groups=('mate')
source=("${pkgname%-*}::git+https://github.com/mate-desktop/${pkgname}.git")        
sha1sums=('SKIP')         
install=${pkgname}.install

pkgver() {
    cd ${srcdir}/${pkgname%-git}
    echo 1.6.9.$(git rev-list --count master).$(git rev-parse --short master)
}

build() {
    cd ${srcdir}/${pkgname%-git}
    ./configure \
        --prefix=/usr \
		--libexecdir=/usr/lib/${pkgname} \
		--localstatedir=/var \
		--disable-static \
		--disable-scrollkeeper
    make clean
	make
}

package() {
    cd ${srcdir}/${pkgname%-git}
    make DESTDIR=${pkgdir} install
}
